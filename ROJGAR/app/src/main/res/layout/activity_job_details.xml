<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublishJob.jobDetails">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="Enter Job Details"
        android:textColor="#080009"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintBottom_toTopOf="@id/scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorActive"
        app:layout_constraintBottom_toTopOf="@id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintVertical_bias="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/jobtype"
                android:layout_width="323dp"
                android:layout_height="43dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

            <EditText
                android:id="@+id/qualification"
                android:layout_width="323dp"
                android:layout_height="43dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Qualification Required"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/title"
                android:layout_width="323dp"
                android:layout_height="43dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Job Title "
                android:inputType="textPersonName"
                android:shadowColor="#9C27B0" />

            <EditText
                android:id="@+id/skills"
                android:layout_width="323dp"
                android:layout_height="43dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Skills Required (Skill1, Skill2, ..)"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/sector"
                android:layout_width="323dp"
                android:layout_height="43dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Job Sector"
                android:inputType="textPersonName"
                android:shadowColor="#9C27B0" />

            <EditText
                android:id="@+id/description"
                android:layout_width="323dp"
                android:layout_height="43dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Job Description >30 characters"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/salary"
                android:layout_width="323dp"
                android:layout_height="43dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Salary PA (Optional)"
                android:inputType="textPersonName"
                android:shadowColor="#9C27B0" />

            <EditText
                android:id="@+id/city"
                android:layout_width="323dp"
                android:layout_height="43dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="Reporting City"
                android:inputType="textPersonName" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_sih_button_bg"
        android:text="Upload and Post"
        android:textColor="#FFFFFF"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>